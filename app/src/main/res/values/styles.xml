<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Base.AppTheme" />

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/kurtin_primary</item>
        <item name="colorPrimaryDark">@color/kurtin_primary_dark</item>
        <!--<item name="colorPrimaryDark">@color/black</item>-->
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/background_fab_item</item>
        <item name="android:textColor">@color/icons</item>
    </style>

    <style name="OkDialogAppTheme" parent="android:Theme.Dialog">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">300dp</item>
        <!-- No backgrounds, titles or window float -->
        <!--<item name="android:windowBackground">@null</item>-->
        <!--<item name="android:windowNoTitle">true</item>-->
        <!--<item name="android:windowIsFloating">false</item>-->
        <item name="android:gravity">bottom|right</item>

    </style>

    <!--:::::::::::-->
    <!--CVar Styles-->
    <!--:::::::::::-->

    <!--Text for instructions on the login screen-->
    <style name="login_instruction_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Edit Text for entering login credentials-->
    <style name="login_edit_text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
    </style>

    <!--Decoration below login edit text-->
    <style name="decoration_login_edit_text">
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
    </style>

    <!--Nave Menu-->
    <style name="kurtin_nav_menu_style">
        <item name="android:textSize">20sp</item>
    </style>

    <!--Toolbar styles-->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- android:textColorPrimary is the color of the title text in the Toolbar  -->
        <item name="android:textColorPrimary">@android:color/holo_orange_light</item>
        <!-- actionMenuTextColor is the color of the text of action (menu) items  -->
        <item name="actionMenuTextColor">@android:color/holo_green_light</item>
        <!-- Tints the input fields like checkboxes and text fields -->
        <item name="colorAccent">@android:color/holo_red_dark</item>
        <!-- Applies to views in their normal state. -->
        <!--controls the color of the hamburger icon-->
        <item name="colorControlNormal">@color/white</item>
        <!-- Applies to views in their activated state (i.e checked or switches) -->
        <item name="colorControlActivated">@android:color/holo_purple</item>
        <!-- Applied to framework control highlights (i.e ripples or list selectors) -->
        <item name="colorControlHighlight">@android:color/holo_red_light</item>

        <!-- Enable these below if you want clicking icons to trigger a ripple effect -->
        <!--
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        -->
    </style>

</resources>
