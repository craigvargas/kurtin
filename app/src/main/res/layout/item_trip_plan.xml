<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_tile_height"
    android:background="@color/divider">

    <ImageView
        android:id="@+id/ivPlace"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/city_placeholder" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/kurtin_primay_translucent"
        android:layout_marginTop="@dimen/home_tile_text_vert_margin"
        android:layout_marginBottom="@dimen/home_tile_text_vert_margin"
        android:layout_marginLeft="@dimen/home_tile_text_left_margin">

        <TextView
            android:id="@+id/tvPlanName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="right"
            android:layout_marginRight="4dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_above="@+id/tvHuntDistance"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvHuntDistance"
            android:gravity="right|center_vertical"
            android:layout_marginRight="4dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="Placeholder text"
            android:drawableRight="@drawable/ic_hunt_white"
            android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvHuntPrize"
            android:gravity="right|center_vertical"
            android:layout_marginRight="4dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="Placeholder text"
            android:drawableRight="@drawable/ic_trophy_white"
            android:layout_below="@+id/tvHuntDistance"/>

    </RelativeLayout>

</RelativeLayout>