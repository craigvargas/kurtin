<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_tile_height"
    android:background="@color/divider">

    <ImageView
        android:id="@+id/ivPlace"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/city_placeholder" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_alignParentBottom="true"
        android:background="@color/kurtin_primay_translucent"
        android:layout_marginLeft="@dimen/home_tile_text_left_margin">
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginBottom="@dimen/home_tile_text_vert_margin"-->
        <!--android:layout_marginTop="@dimen/home_tile_text_vert_margin"-->

        <TextView
            android:id="@+id/tvPlanName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="Placeholder hang"
            android:layout_above="@+id/tvHuntSubtitle"
            />

        <TextView
            android:id="@+id/tvHuntSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Placeholder hang"
            android:layout_above="@+id/dividerTitle"
            />

        <View
            android:id="@+id/dividerTitle"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_light"
            android:layout_above="@+id/tvHuntDistance"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="2dp"
            />
        <!--android:layout_below="@+id/tvPlanName"-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvHuntDistance"
            android:gravity="right|center_vertical"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="Placeholder text"
            android:drawableRight="@drawable/ic_hunt_white"
            android:layout_above="@+id/tvHuntPrize"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvHuntPrize"
            android:gravity="right|center_vertical"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="4dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="Placeholder text"
            android:drawableRight="@drawable/ic_trophy_white"
            android:layout_alignParentBottom="true"
            />
        <!--android:layout_below="@+id/tvHuntDistance"-->

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivStatusIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="@null"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
         />
    <!--android:layout_below="@id/tvPlanName"-->

</RelativeLayout>



