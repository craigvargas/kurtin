<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rlHuntItem"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_place"
    android:padding="10dp">

    <TextView
        android:id="@+id/tvPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:text="#1"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:textSize="16sp"
        android:layout_alignBottom="@+id/ivUserImage"
        android:textColor="@color/outer_space"
        android:layout_toRightOf="@+id/ivUserImage" />


    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginTop="4dp"
        tools:text="Castello di Amorosa"
        android:textSize="16sp"
        android:textColor="@color/outer_space"
        android:layout_marginLeft="16dp"
        android:layout_alignBottom="@+id/ivUserImage"
        android:layout_toRightOf="@+id/tvPosition"
        android:layout_toEndOf="@+id/tvPosition" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivUserImage"
        android:layout_width="@dimen/background_profile_size"
        android:layout_height="@dimen/background_profile_size"
        android:background="@drawable/background_profile"
        android:contentDescription="@null"
        android:src="@drawable/profile_placeholder"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tvPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/ivUserImage"
        tools:text="400"
        android:textSize="20sp"
        android:textColor="@color/kurtin_text_primary"
         />
    <!--android:layout_alignLeft="@+id/tvPosition"-->
    <!--android:layout_alignRight="@+id/tvPosition"-->
    <!--android:layout_toEndOf="@+id/ivUserImage"-->
    <!--android:layout_centerVertical="true"-->
    <!--android:layout_below="@+id/tvPosition"-->
    <!--android:layout_toRightOf="@+id/ivUserImage"-->



    <TextView
        android:id="@+id/tvHuntName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_below="@+id/tvName"
        android:layout_marginTop="2dp"
        tools:text="Castello di Amorosa"
        android:textSize="16sp"
        android:textColor="@color/kurtin_text_light"
        android:layout_toRightOf="@+id/tvPoints"
        android:layout_marginLeft="16dp"
        android:visibility="gone"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ivUserImage"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/gray"/>

</RelativeLayout>
