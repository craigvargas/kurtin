    <!--Confirm Password-->
    <EditText
        android:id="@+id/etConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPasswordDecoration"
        android:layout_marginTop="0dp"
        android:drawableLeft="@drawable/ic_kurtin_lock_white"
        android:hint="@string/confirm_password_hint"
        android:inputType="textPassword"
        style="@style/login_edit_text"
        />

    <TextView
        android:id="@+id/tvConfirmPasswordDecoration"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width_thin"
        android:background="@color/white"
        android:layout_below="@+id/etConfirmPassword"
        android:layout_marginTop="0dp"
        style="@style/decoration_login_edit_text"
        />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/tvConfirmPasswordDecoration"
        android:background="@drawable/btn_round"
        android:backgroundTint="@color/kurtin_primary_light"
        android:text="@string/action_sign_up"
        android:textColor="@color/white"
        />
