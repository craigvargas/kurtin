    <!--Username-->
    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLoginInstructionTwo"
        android:layout_marginTop="32dp"
        android:drawableLeft="@drawable/ic_kurtin_profile_white"
        android:hint="@string/username_hint"
        android:inputType="text"
        style="@style/login_edit_text"
        />
    <!--android:layout_below="@+id/tvKurtinLoginText"-->
    <!--android:layout_marginTop="32dp"-->

    <TextView
        android:id="@+id/tvUsernameDecoration"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width_thin"
        android:background="@color/white"
        android:layout_below="@+id/etUsername"
        android:layout_marginTop="0dp"
        style="@style/decoration_login_edit_text"
        />

    <!--Email-->
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUsernameDecoration"
        android:layout_marginTop="0dp"
        android:drawableLeft="@drawable/ic_kurtin_email_white"
        android:hint="@string/email_hint"
        android:inputType="textEmailAddress"
        style="@style/login_edit_text"
        />

    <TextView
        android:id="@+id/tvEmailDecoration"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width_thin"
        android:background="@color/white"
        android:layout_below="@+id/etEmail"
        android:layout_marginTop="0dp"
        style="@style/decoration_login_edit_text"
        />

    <!--Password-->
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEmailDecoration"
        android:layout_marginTop="0dp"
        android:drawableLeft="@drawable/ic_kurtin_lock_white"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        style="@style/login_edit_text"
        />

    <TextView
        android:id="@+id/tvPasswordDecoration"
        android:layout_width="match_parent"
