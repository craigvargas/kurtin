<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/leader_boards"
            android:textAllCaps="true"
            android:textColor="@color/usc_gold"
            android:textSize="32sp"
            />

        <Spinner
            android:id="@+id/spinnerHunts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:prompt="@string/selectHunt"
            android:text="[Select a Planet...]" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlPodium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlBanner">

    <!--First Place-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivFirstPlacePic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:fitsSystemWindows="true"
        android:src="@drawable/profile_placeholder"
        app:border_width="1dp" />

    <TextView
        android:id="@+id/tvFirstPlaceName"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivFirstPlacePic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:ellipsize="marquee"
        android:gravity="center"
        android:text="#1 Placeholder" />

    <TextView
        android:id="@+id/tvFirstPlacePoints"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvFirstPlaceName"
        android:layout_centerHorizontal="true"
        android:ellipsize="marquee"
        android:gravity="center"
        android:text="1,000" />

    <!--Second Place-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivSecondPlacePic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:layout_toLeftOf="@+id/ivFirstPlacePic"
        android:fitsSystemWindows="true"
        android:src="@drawable/profile_placeholder"
        app:border_width="1dp" />

    <TextView
        android:id="@+id/tvSecondPlaceName"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivSecondPlacePic"
        android:layout_marginTop="16dp"
        android:layout_toLeftOf="@id/ivFirstPlacePic"
        android:ellipsize="marquee"
        android:gravity="center"
        android:text="#2 Placeholder" />

    <TextView
        android:id="@+id/tvSecondPlacePoints"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSecondPlaceName"
        android:layout_toLeftOf="@id/ivFirstPlacePic"
        android:ellipsize="marquee"
        android:gravity="center"
        android:text="700" />

    <!--Third Place-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivThirdPlacePic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:layout_toRightOf="@+id/ivFirstPlacePic"
        android:fitsSystemWindows="true"
        android:src="@drawable/profile_placeholder"
        app:border_width="1dp" />

    <TextView
        android:id="@+id/tvThirdPlaceName"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivThirdPlacePic"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/ivFirstPlacePic"
        android:ellipsize="marquee"
        android:gravity="center"
        android:text="#2 Placeholder" />

    <TextView
        android:id="@+id/tvThirdPlacePoints"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvThirdPlaceName"
        android:layout_toRightOf="@id/ivFirstPlacePic"
        android:ellipsize="marquee"
        android:gravity="center"
        android:text="400" />

    </RelativeLayout>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlPodium"
        android:layout_marginTop="16dp"
        android:orientation="vertical">
        <!--xmlns:android="http://schemas.android.com/apk/res/android"-->
        <!--xmlns:app="http://schemas.android.com/apk/res-auto"-->
        <!--xmlns:fab="http://schemas.android.com/apk/res-auto"-->

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--List of hi scores-->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvTripPlansInProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/tvEmptyInProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/emptySelectionLB"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvEmptyLeaderBoard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/emptyLeaderBoard"
                android:visibility="gone" />


        </android.support.v4.widget.SwipeRefreshLayout>

    </android.support.design.widget.CoordinatorLayout>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ivUserPic"
        android:layout_alignLeft="@+id/ivUserPic"
        android:layout_alignStart="@+id/ivUserPic"
        android:background="@drawable/btn_rounded"
        android:backgroundTint="@color/kurtin_primary_dark"
        android:ellipsize="marquee"
        android:maxLines="1"
        android:padding="8dp"
        android:text="#XX Placeholder - 100"
        android:textColor="@color/white" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-25dp"
        android:layout_marginRight="32dp"
        android:src="@drawable/triangle_down"
        android:tint="@color/kurtin_primary_dark" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="48dp"
        android:layout_marginRight="32dp"
        android:src="@drawable/circle"
        android:tint="@color/kurtin_primary_dark" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivUserPic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="48dp"
        android:layout_marginRight="32dp"
        android:fitsSystemWindows="true"
        android:src="@drawable/profile_placeholder"
        app:border_color="@color/kurtin_primary_dark"
        app:border_width="2dp" />

</RelativeLayout>

