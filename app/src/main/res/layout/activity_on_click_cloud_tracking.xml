
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!--Frame that holds the camera view-->
    <FrameLayout
        android:id="@+id/track_frame"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/on_click_cloud_tracking_info_field"
        android:editable="false"
        android:background="@color/kurtin_primary"
        android:textColor="@color/white"
        android:visibility="invisible"
        app:layout_heightPercent="4%"
        app:layout_widthPercent="100%"
        android:gravity="center"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/space"
        android:layout_below="@+id/on_click_cloud_tracking_info_field"
        app:layout_heightPercent="1%"
        app:layout_widthPercent="100%" />

    <!-- Child2 is drawn over Child1 -->


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/q1"
        app:layout_heightPercent="50%"
        app:layout_widthPercent="50%"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        android:background="@drawable/border"
        android:visibility="invisible">
        <!--android:layout_below="@+id/space"-->

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/q1"
        android:layout_alignBottom="@+id/q1"
        android:id="@+id/q2"
        app:layout_heightPercent="50%"
        app:layout_widthPercent="50%"
        android:orientation="vertical"
        android:layout_marginRight="0dp"
        android:visibility="invisible"
        android:background="@drawable/border"
        android:layout_toRightOf="@+id/q1">
        <!--android:layout_below="@+id/space"-->

    </RelativeLayout>



    <!-- Child2 is drawn over Child1 -->
    <RelativeLayout
        android:id="@+id/q3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/q1"
        app:layout_heightPercent="50%"
        app:layout_widthPercent="50%"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:visibility="invisible"
        android:background="@drawable/border"
        android:layout_gravity="bottom|left" >
        <!--android:layout_above="@+id/space2"-->

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_heightPercent="50%"
        app:layout_widthPercent="50%"
        android:layout_marginRight="0dp"
        android:id="@+id/q4"
        android:layout_toRightOf="@+id/q3"
        android:layout_below="@+id/q2"
        android:layout_alignTop="@+id/q3"
        android:layout_alignBottom="@+id/q3"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:background="@drawable/border">
        <!--android:layout_above="@+id/space2"-->


    </RelativeLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/space2"
        android:layout_above="@+id/on_click_cloud_tracking_recognize_button"
        app:layout_heightPercent="0%"
        app:layout_widthPercent="100%" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan"
        android:id="@+id/on_click_cloud_tracking_recognize_button"
        android:layout_gravity="center_horizontal"
        android:background="@color/kurtin_primary"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_heightPercent="4%"
        app:layout_widthPercent="100%"
        android:theme="@style/Widget.AppCompat.Button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabCompleteHunt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_done_white"
        android:padding="8dp"
        android:scaleType="centerCrop"
        fab:fab_colorNormal="@color/kurtin_primary_light"
        fab:fab_colorPressed="@color/kurtin_primary_dark"
        app:fabSize="mini"
        />
    <!--app:layout_anchor="@id/rvTripPlans"-->
    <!--app:layout_anchorGravity="bottom|right|end"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--android:layout_above="@+id/on_click_cloud_tracking_recognize_button"-->

    <!--<com.getbase.floatingactionbutton.FloatingActionButton-->
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/fabCompleteHunt"
        android:src="@drawable/ic_close_64"
        android:tint="@color/white"
        android:padding="0dp"
        android:scaleType="centerCrop"
        fab:fab_colorNormal="@color/kurtin_primary_light"
        fab:fab_colorPressed="@color/kurtin_primary_dark"
        app:fabSize="mini"
        />

    <!--<de.hdodenhof.circleimageview.CircleImageView-->
    <!--android:id="@+id/ivBrandLogo"-->
    <!--android:layout_height="100dp"-->
    <!--android:layout_width="100dp"-->
    <!--android:layout_centerInParent="true"-->
    <!--android:src="@mipmap/ic_kurtin_launcher"-->
    <!--android:padding="30dp"-->
    <!--android:cropToPadding="true"-->
    <!--app:border_color="@color/outer_space"-->
    <!--app:border_width="2dp"-->
    <!--android:visibility="gone"-->
    <!--/>-->

    <ImageView
        android:id="@+id/ivBrandLogo"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_kurtin_launcher"
        android:background="@drawable/circle_border"
        android:backgroundTint="@color/outer_space"
        android:padding="15dp"
        android:cropToPadding="true"
        app:border_color="@color/outer_space"
        app:border_width="2dp"
        android:visibility="gone"
        />

    <RelativeLayout
        android:id="@+id/rlPrompt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="32dp"
        android:padding="16dp"
        android:background="@drawable/btn_round"
        android:backgroundTint="@color/translucent_dark"
        android:visibility="visible"
        >

        <ImageView
            android:id="@+id/ivKurtinMascot"
            android:layout_height="100dp"
            android:layout_width="100dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_kurtin_launcher"
            android:background="@drawable/circle_border"
            android:backgroundTint="@color/white"
            android:padding="8dp"
            />

        <TextView
            android:id="@+id/tvPromptText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ivKurtinMascot"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="Test Text"
            />

        <Space
            android:id="@+id/spaceDivider"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_below="@+id/tvPromptText"
            android:layout_marginTop="48dp"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:id="@+id/btnYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spaceDivider"
            android:layout_alignEnd="@+id/spaceDivider"
            android:text="@string/yes"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:background="@color/transparent"
            android:layout_marginEnd="32dp"
            />

        <Button
            android:id="@+id/btnNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spaceDivider"
            android:layout_alignStart="@+id/spaceDivider"
            android:text="@string/no"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:background="@color/transparent"
            android:layout_marginStart="32dp"
            />

    </RelativeLayout>



</android.support.percent.PercentRelativeLayout>

