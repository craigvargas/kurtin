<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.travelguide.fragments.KurtinProfileFragment">

    <ImageView
        android:id="@+id/ivBkgdProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bkgd_nav_menu"
        android:background="@color/black"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfilePic"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:src="@drawable/profile_placeholder"/>

    <Button
        android:id="@+id/btnChangeProfilePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivProfilePic"
        android:layout_centerHorizontal="true"
        android:background="@color/transparent"
        android:text="@string/change_profile_pic"
        android:textColor="@color/dogwood_rose"
        android:textSize="16sp"
        android:textStyle="bold"/>

</RelativeLayout>
